<Window x:Class="ES_BackupManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"        
        mc:Ignorable="d"
        Title="Backup Administrator | Evolution Studio" Height="648" Width="970"
        ResizeMode="NoResize">
    <Grid>
        <!-- Musel jsem to prohodit kvůli null reference exception, instancuje se to jako HTML -->
        <Label Content="Sort by:" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox_Main_Sort" HorizontalAlignment="Left" Margin="65,40,0,0" VerticalAlignment="Top" Width="140" SelectedIndex="0" IsEnabled="False">
            <ComboBoxItem Content="Default"/>
            <ComboBoxItem Content="Active ↑ (ASC)"/>
            <ComboBoxItem Content="Active ↓ (DESC)"/>
        </ComboBox>
        <Label Content="Filter:" HorizontalAlignment="Left" Margin="21,9,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox_Main_Filter" HorizontalAlignment="Left" Margin="65,12,0,0" VerticalAlignment="Top" Width="140" SelectedIndex="0" SelectionChanged="comboBox_Main_Filter_SelectionChanged">
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="Verified"/>
            <ComboBoxItem Content="Unverified"/>
            <ComboBoxItem Content="Banned"/>
        </ComboBox>
        <Button x:Name="btn_Main_ApplyFilter" Content="Apply" HorizontalAlignment="Left" Margin="65,66,0,0" VerticalAlignment="Top" Width="75" Click="btn_Main_ApplyFilter_Click"/>
        <DataGrid Name="dataGrid_Clients" HorizontalAlignment="Left" Margin="10,91,0,10" Width="200" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dataGrid_Clients_SelectionChanged" SelectionMode="Single">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="0">
                            <Setter Property="Background" Value="LightCyan"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="1">
                            <Setter Property="Background" Value="LightYellow"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="2">
                            <Setter Property="Background" Value="LightGray"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Client Name" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TabControl Name="TabControl_Main" Margin="215,10,10,10" IsEnabled="False">
            <TabItem Header="Information">
                <Grid>
                    <GroupBox Header="Client Details" Margin="5,0,5,268">
                        <Grid>
                            <Label Content="Name:" HorizontalAlignment="Left" Margin="99,10,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="textBox_Client_Name" HorizontalAlignment="Left" Height="23" Margin="192,13,0,0" TextWrapping="Wrap" Text="Client name" VerticalAlignment="Top" Width="250" />
                            <Label Content="Description:" HorizontalAlignment="Left" Margin="70,38,0,0" VerticalAlignment="Top"/>
                            <xctk:WatermarkTextBox x:Name="textBox_Client_Description" HorizontalAlignment="Left" Height="23" Margin="192,42,0,0" TextWrapping="Wrap" Watermark="Description not set" VerticalAlignment="Top" Width="250"/>
                            <GroupBox Header="Client Emails" Height="146" Margin="10,70,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="689">
                                <Grid>
                                    <ListBox x:Name="listBox_Client_Emails" HorizontalAlignment="Left" Margin="273,10,0,10" Width="394" SelectionChanged="listBox_Client_Emails_SelectionChanged"/>
                                    <xctk:WatermarkTextBox x:Name="textBox_Client_Email" HorizontalAlignment="Left" Height="23" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" TextChanged="textBox_Client_Email_TextChanged" Watermark="Client email"/>
                                    <Button x:Name="btn_Client_EmailAdd" Content="Add" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="75" Click="btn_Client_EmailAdd_Click"/>
                                    <Button x:Name="btn_Client_EmailEdit" Content="Edit" HorizontalAlignment="Left" Margin="90,94,0,0" VerticalAlignment="Top" Width="75" Click="btn_Client_EmailEdit_Click"/>
                                    <Button x:Name="btn_Client_EmailRemove" Content="Remove" HorizontalAlignment="Left" Margin="170,94,0,0" VerticalAlignment="Top" Width="75" Click="btn_Client_EmailRemove_Click"/>
                                    <Label x:Name="label_Client_EmailError" Content="*Email is not in valid format" ToolTip="Example: evostudio@evostudio.com or evo.studio@evostudio.co.uk" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" FontSize="10" Foreground="#FFC31616" Visibility="Hidden"/>

                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Client Settings" Margin="5,254,5,54">
                        <Grid>
                            <Label Content="Status:" HorizontalAlignment="Left" Margin="99,10,0,0" VerticalAlignment="Top"/>
                            <ComboBox x:Name="comboBox_Client_Status" HorizontalAlignment="Left" Margin="192,14,0,0" VerticalAlignment="Top" Width="250" IsReadOnly="True">
                                <ComboBoxItem Content="Verified"/>
                                <ComboBoxItem Content="Unverified"/>
                                <ComboBoxItem Content="Banned"/>
                            </ComboBox>


                        </Grid>
                    </GroupBox>
                    <Button x:Name="btn_Client_Edit" Content="Edit" Margin="0,0,12,23" Click="btn_Client_Edit_Click" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom"/>
                    <Button x:Name="btn_Client_Save" Content="Save" HorizontalAlignment="Left" Margin="10,0,0,23" Width="75" Click="btn_Client_Save_Click" Height="22" VerticalAlignment="Bottom"/>
                    <Button x:Name="btn_Client_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="90,0,0,23" Width="75" Click="btn_Client_Cancel_Click" Height="22" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
            <TabItem Header="Backups">
                <Grid x:Name="Backup_Grid">
                    <DataGrid x:Name="dataGrid_Backups" HorizontalAlignment="Left" Margin="10,10,0,10" Width="200" IsReadOnly="True" AutoGenerateColumns="False" SelectionChanged="dataGrid_Backups_SelectionChanged" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Backup Name" Binding="{Binding Name}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <GroupBox Header="Backup Info" Margin="225,10,10,10" Grid.ColumnSpan="11">
                        <Grid>
                            <Label Content="Name:" HorizontalAlignment="Left" Margin="99,10,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="textBox_Backup_Name" HorizontalAlignment="Left" Height="23" Margin="192,13,0,0" TextWrapping="Wrap" Text="Backup name" VerticalAlignment="Top" Width="250" />
                            <Label Content="Description:" HorizontalAlignment="Left" Margin="70,38,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="textBox_Backup_Description" HorizontalAlignment="Left" Height="23" Margin="192,42,0,0" TextWrapping="Wrap" Text="Backup description" VerticalAlignment="Top" Width="250" />
                            <GroupBox Header="Type Settings" HorizontalAlignment="Left" Height="62" Margin="10,111,-22,0" VerticalAlignment="Top" Width="494">
                                <Grid>
                                    <Label Content="Backup Type:" HorizontalAlignment="Left" Margin="48,4,0,0" VerticalAlignment="Top"/>
                                    <RadioButton Name="radioBtn_Backup_Full" Content="Full" HorizontalAlignment="Left" Margin="179,10,0,0" Height="21" VerticalAlignment="Top"/>
                                    <RadioButton Name="radioBtn_Backup_Diff" Content="Differencial" HorizontalAlignment="Left" Margin="263,10,0,0" Height="21" VerticalAlignment="Top" IsChecked="True"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Path Settings" HorizontalAlignment="Left" Height="90" Margin="10,245,-22,0" VerticalAlignment="Top" Width="494" >
                                <Grid>
                                    <Label Content="Source:" HorizontalAlignment="Left" Margin="79,5,0,0" VerticalAlignment="Top"/>
                                    <TextBox x:Name="textBox_Backup_Source" HorizontalAlignment="Left" Height="23" Margin="175,9,0,0" TextWrapping="Wrap" Text="Backup source path" VerticalAlignment="Top" Width="250"/>
                                    <Label Content="Destination:" HorizontalAlignment="Left" Margin="55,33,0,0" VerticalAlignment="Top"/>
                                    <TextBox x:Name="textBox_Backup_Dest" HorizontalAlignment="Left" Height="23" Margin="175,37,0,0" TextWrapping="Wrap" Text="Backup destination path" VerticalAlignment="Top" Width="250"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Time Settings" Margin="10,340,10,58">
                                <Grid>
                                    <Label Content="Expiration Date:" HorizontalAlignment="Left" Margin="36,9,0,0" VerticalAlignment="Top"/>
                                    <Label Content="Start Time:" HorizontalAlignment="Left" Margin="63,38,0,0" VerticalAlignment="Top"/>
                                    <Label Content="End Time:" HorizontalAlignment="Left" Margin="67,67,0,0" VerticalAlignment="Top"/>
                                    <xctk:DateTimePicker Name="dateTimePicker_Backup_Expire" Margin="178,11,34,0" Height="24" VerticalAlignment="Top"/>
                                    <xctk:DateTimePicker x:Name="dateTimePicker_Backup_Start" Margin="178,40,34,0" Height="24" VerticalAlignment="Top"/>
                                    <xctk:DateTimePicker x:Name="dateTimePicker_Backup_End" Margin="178,69,34,0" Height="24" VerticalAlignment="Top"/>
                                    <Label x:Name="label_Backup_ExpireError" Content="*" ToolTip="Date must be higher than current date." Margin="0,11,5,0" VerticalAlignment="Top" Foreground="Red" Visibility="Hidden" HorizontalAlignment="Right" Width="29"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Compression Settings" HorizontalAlignment="Left" Height="62" Margin="10,178,-22,0" VerticalAlignment="Top" Width="494">
                                <Grid>
                                    <Label Content="Compression Type:" HorizontalAlignment="Left" Margin="19,4,0,0" VerticalAlignment="Top"/>
                                    <RadioButton x:Name="radioBtn_Backup_Compress" Content="Compress" HorizontalAlignment="Left" Margin="179,10,0,0" Height="21" VerticalAlignment="Top"/>
                                    <RadioButton x:Name="radioBtn_Backup_NoCompress" Content="No Compress" HorizontalAlignment="Left" Margin="263,10,0,0" Height="21" VerticalAlignment="Top" IsChecked="True"/>
                                </Grid>
                            </GroupBox>
                            <Button Name="btn_Backup_Edit" Content="Edit" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" Click="btn_Backup_Edit_Click"/>
                            <Button Name="btn_Backup_Save" Content="Save" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="22" VerticalAlignment="Bottom" Click="btn_Backup_Save_Click"/>
                            <Button Name ="btn_Backup_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="90,0,0,10" VerticalAlignment="Bottom" Width="75" Click="btn_Backup_Cancel_Click" Height="22"/>
                            <Label Content="Created By Template:" HorizontalAlignment="Left" Margin="20,69,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="textBox_Backup_Template" HorizontalAlignment="Left" Height="23" Margin="192,72,0,0" TextWrapping="Wrap" Text="Backup template" VerticalAlignment="Top" Width="250"/>
                            <Button x:Name="btn_Backup_TemplateTree" Content="..." HorizontalAlignment="Left" Margin="447,73,0,0" VerticalAlignment="Top" Width="20" ToolTip="Show tree of this template"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Backup Templates">
                <Grid>
                    <DataGrid x:Name="dataGrid_BackupTemplates" HorizontalAlignment="Left" Margin="10,10,0,10" Width="200" IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Template Name" Binding="{Binding Name}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <GroupBox Header="Backup Template Info" Margin="225,10,10,10">
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Logs">
                <Grid>
                    <DataGrid x:Name="dataGrid_Logs" HorizontalAlignment="Left" Margin="10,10,0,10" Width="200" IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Log Time" Binding="{Binding UTCTime}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <GroupBox Header="Log Info" Margin="225,10,10,263">
                        <Grid>
                            <Label Content="Backup:" HorizontalAlignment="Left" Margin="99,10,0,0" VerticalAlignment="Top"/>
                            <Label Content="Log Type:" HorizontalAlignment="Left" Margin="89,41,0,0" VerticalAlignment="Top"/>
                            <Label Content="UTC Time:" HorizontalAlignment="Left" Margin="86,72,0,0" VerticalAlignment="Top"/>
                            <xctk:DateTimePicker Name="dateTimePicker_Log_Time" Margin="176,74,0,175" HorizontalAlignment="Left" Width="246"/>
                            <TextBox x:Name="textBox_Log_BackupName" HorizontalAlignment="Left" Height="23" Margin="176,13,0,0" TextWrapping="Wrap" Text="Backup name" VerticalAlignment="Top" Width="246"/>
                            <ComboBox x:Name="comboBox_Log_LogType" HorizontalAlignment="Left" Margin="176,45,0,0" VerticalAlignment="Top" Width="246">
                                <ComboBoxItem Content="Error"/>
                                <ComboBoxItem Content="Warning"/>
                                <ComboBoxItem Content="Message"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Log Configuration" Margin="225,0,10,10" Height="248" VerticalAlignment="Bottom">

                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
