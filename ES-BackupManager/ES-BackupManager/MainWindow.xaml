<Window x:Class="ES_BackupManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ES_BackupManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <DataGrid Name="dataGrid_Clients" HorizontalAlignment="Left" Margin="10,10,0,10" Width="200" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dataGrid_Clients_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Client Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TabControl Name="TabControl_Main" Margin="215,10,10,10">
            <TabItem Header="Information" Height="24" VerticalAlignment="Top">
                <Grid>
                    <GroupBox Header="Client Details" Margin="5,0,5,250">
                        <Grid>
                            <Label Content="Name:" HorizontalAlignment="Left" Margin="69,10,0,0" VerticalAlignment="Top"/>
                            <Label Name="lbl_Name" Content="NAME" HorizontalAlignment="Left" Margin="180,10,0,0" VerticalAlignment="Top"/>
                            <Label Content="Description:" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top"/>
                            <Label x:Name="lbl_Description" Content="DESCRIPTION" HorizontalAlignment="Left" Margin="180,40,0,0" VerticalAlignment="Top"/>
                            <Label Content="Verified:" HorizontalAlignment="Left" Margin="60,70,0,0" VerticalAlignment="Top"/>
                            <Label x:Name="lbl_Verified" Content="VERIFIED" HorizontalAlignment="Left" Margin="180,70,0,0" VerticalAlignment="Top"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Client Status" Margin="5,277,5,10">

                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Backups" Height="22" VerticalAlignment="Top">
                <Grid x:Name="Backup_Grid">
                    <DataGrid x:Name="dataGrid_Backups" HorizontalAlignment="Left" Height="506" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Backup Name" Binding="{Binding Name}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <GroupBox Header="Backup Info" Margin="225,10,10,10">

                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Backup Templates">
                <Grid>
                    <DataGrid x:Name="dataGrid_BackupTemplates" HorizontalAlignment="Left" Height="506" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Template Name" Binding="{Binding Name}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <GroupBox Header="Backup Template Info" Margin="225,10,10,10">

                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Logs">
                <Grid>
                    <DataGrid x:Name="dataGrid_Logs" HorizontalAlignment="Left" Height="506" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Log Time" Binding="{Binding UTCTime}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <GroupBox Header="Log Info" Margin="225,10,10,263">

                    </GroupBox>
                    <GroupBox Header="Log Configuration" Margin="225,263,10,10">

                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Logins"></TabItem>
            <TabItem Header="Settings"></TabItem>

        </TabControl>
    </Grid>
</Window>
