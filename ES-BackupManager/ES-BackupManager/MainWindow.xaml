<Window x:Class="ES_BackupManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ES_BackupManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="666" Width="979.5">
    <Grid HorizontalAlignment="Stretch" Margin="0,0,0,-20" Width="auto">
        <DockPanel HorizontalAlignment="Stretch" Height="23" LastChildFill="False" Margin="0,0,0,0" VerticalAlignment="Top" Width="auto" >
            <Menu Height="23" VerticalAlignment="Top" Width="auto" DockPanel.Dock="Top">
                <MenuItem Header="Test">
                </MenuItem>
                <MenuItem Header="Test">
                </MenuItem>

                <MenuItem Header="Test">
                </MenuItem>
            </Menu>
        </DockPanel>
        <GroupBox Header="List of Users" Height="530" Margin="10,28,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="282">
            <DataGrid x:Name="Main_dataGrid_Users" HorizontalAlignment="Left" Height="491" Margin="10,10,0,0" VerticalAlignment="Top" Width="247"/>
        </GroupBox>
        <GroupBox Header="Client Informations:" Height="198" Margin="297,28,10,0" VerticalAlignment="Top">
            <Grid x:Name="Main_Grid_ClientInfo" Margin="0,10,-2,10">
                <Label Content="Client:" VerticalAlignment="Top" HorizontalAlignment="Left" Width="45"/>
                <Label Content="Status:" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top"/>
                <Label Content="Verified:" HorizontalAlignment="Left" Margin="0,52,0,0" VerticalAlignment="Top"/>
                <Button x:Name="button_ViewBackups" Content="View backups" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Width="100"/>
                <Button x:Name="button_ViewLogs" Content="View logs" HorizontalAlignment="Left" Margin="115,124,0,0" VerticalAlignment="Top" Width="100"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Backup Settings:" Height="289" Margin="297,226,10,0" VerticalAlignment="Top">
            <Grid x:Name="Main_Grid_ClientSettings" Margin="0,10,-2,10">
                <Label Content="Backup Type:" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Margin="10,0,0,0"/>
                <Button x:Name="btn_ResetSett" Content="Reset Settings" HorizontalAlignment="Left" Margin="545,10,0,0" VerticalAlignment="Top" Width="100"/>
                <Button x:Name="btn_ReloadSett" Content="Reload Settings" HorizontalAlignment="Left" Margin="545,35,0,0" VerticalAlignment="Top" Width="100"/>
                <Button x:Name="btn_SaveSett" Content="Save Settings" HorizontalAlignment="Left" Margin="545,60,0,0" VerticalAlignment="Top" Width="100"/>
                <ComboBox x:Name="comboBox_BackupType" HorizontalAlignment="Left" Margin="180,4,0,0" VerticalAlignment="Top" Width="350" SelectedIndex="0">
                    <ComboBoxItem Content="Full"/>
                    <ComboBoxItem Content="Differencial"/>
                    <ComboBoxItem Content="Log"/>
                </ComboBox>
                <DatePicker HorizontalAlignment="Left" Margin="180,195,0,0" VerticalAlignment="Top" Width="350" SelectedDateFormat="Long"/>
                <Label x:Name="label" Content="Expiration Date:" HorizontalAlignment="Left" Margin="10,193,0,0" VerticalAlignment="Top" Width="100"/>
                <CheckBox x:Name="checkBox_ExpDate" Content=" Set Expire Date" HorizontalAlignment="Left" Margin="10,172,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
